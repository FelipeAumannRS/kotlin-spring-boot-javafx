<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../css/commons/views.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controller.TransactionViewController">
   <children>
      <VBox alignment="CENTER" onMouseClicked="#returnToUserPageOnMouseClicked" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox maxWidth="200.0" onMouseClicked="#returnToUserPageOnMouseClicked" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#returnToUserPageOnMouseClicked" text="Return to user page" />
               </children>
            </HBox>
            <TextField fx:id="textField_destinatary" maxWidth="200.0" promptText="Destinatary user name" />
            <TextField fx:id="textField_amount" maxWidth="200.0" promptText="Amount to transfer" />
            <Button mnemonicParsing="false" onMouseClicked="#transferOnMouseClicked" text="Transfer" />
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
